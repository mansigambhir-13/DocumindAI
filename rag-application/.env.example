# RAG Application Configuration
# Copy this file to .env and modify as needed

# Debug settings
DEBUG=True

# OCR Configuration
USE_OCR=True
OCR_ENGINE=tesseract
OCR_DPI=300
OCR_LANGUAGE=eng
ENHANCE_IMAGE=True

# Text processing settings
MIN_PARAGRAPH_LENGTH=50
MAX_PARAGRAPH_LENGTH=2000

# Chunking settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retry settings
MAX_RETRIES=3

# Keyword extraction settings
MAX_KEYWORDS=20
KEYWORD_MIN_SCORE=0.3

# Embedding settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32

# Theme identification settings
NUM_TOPICS=10
THEME_ALGORITHM=lda